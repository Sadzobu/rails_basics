<%= form_with model: @test, local: true do |form| %>
	<% if @test.errors.present? %>
	<div>
		<h2><%=pluralize(@test.errors.count, 'error') %> detected:</h2>
		<ul>
			<% @test.errors.full_messages.each do |message| %>
			 <li><%= message %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	<p>
		<%= form.label :title %><br>
		<%= form.text_field :title %>
	</p>

	<p>
		<%= form.label :level %><br>
		<%= form.number_field :level %>
	</p>

	<p>
		<%= form.label :category_id %><br>
		<%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
	</p>

	<p>
		<%= form.label :author_id %><br>
		<%= form.collection_select :category_id, User.all, :id, :name, prompt: true %>
	</p>

	<p><%= form.submit %></p>
<% end %>