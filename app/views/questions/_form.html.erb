<h2><%= question_header(@question) %></h2>

<%= form_with model: [@test, @question], local: true do |form|%>

  <%= render 'shared/errors', resources: @question %>

  <p>
    <%= form.label :body %><br>
    <%= form.text_field :body %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<td><%= link_to 'Back', admin_test_path(@question.test)%></td>
