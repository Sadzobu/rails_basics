<div class="container">
  <div class="row justify-content-center mt-3">
    <div class="col col-md-4">
      <h2>Contact Us</h2>
          <%= form_with url: feedbacks_path, local: true, method: :post do |form|%>
            <div class="form-group">
              <p>
                <%= form.text_area :message, class: "form-control", placeholder: "Your message", rows: "4" %>
              </p>

              <p><%= form.submit 'Send', class: "btn btn-primary" %></p>
            </div>
          <% end %>
    </div>
  </div>
</div>